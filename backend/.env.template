# Backend Environment Variables Template
# Copy this to .env and fill in your values
# This file is automatically excluded from git (.gitignore)

# === REQUIRED ===
# PostgreSQL connection string
# Format: postgres://username:password@hostname:port/database
# Local example: postgres://postgres:password@localhost:5432/postgres
# Render example: postgresql://user:pass@dpg-xxxxxx.render.internal:5432/dbname
DATABASE_URL=postgres://postgres:your_password@localhost:5432/postgres

# === DATABASE CONNECTION ===
# Enable SSL for hosted PostgreSQL (Render, ElephantSQL, Neon, Railway)
# Set to 'true' for production, 'false' for local development
DATABASE_SSL=false

# === SERVER ===
# Node environment (development | production)
NODE_ENV=development

# Server port
PORT=3001

# === CORS ===
# Frontend URL for CORS (allow cross-origin requests)
# Local: http://localhost:3000
# Production: https://your-frontend-domain.onrender.com
FRONTEND_URL=http://localhost:3000
